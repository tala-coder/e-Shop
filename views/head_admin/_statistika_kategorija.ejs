<!DOCTYPE html>
<html lang="bs">
<head>
    <title> Kategorije </title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

</head>
<body onload="funkcija('<%=JSON.stringify(brojkategorija)%>'  )">
<div class="row">
    <div class="col-5">
        <canvas id="myChart" width="40" height="40" ></canvas>
    </div>
</div>
<script  src="https://cdn.jsdelivr.net/npm/chart.js">
</script>

<script>

    function funkcija( objekat ) {
        console.log(objekat)
        // objekat = JSON.parse(objekat);
        let labales = ['Broj kategorija'] ;

        const ctx = document.getElementById('myChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labales,
                datasets: [{
                    label: 'Broj kategorija',
                    data: [objekat],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

    }

</script>
</body>

</html>