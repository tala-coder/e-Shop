<style>
    .intro {
        height: 100%;
    }

    .gradient-custom {
        /* fallback for old browsers */
        background: #003399;

        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to bottom right, #003399, rgba(86, 127, 208, 0.65));

        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to bottom right, #003399, #5881d2)
    }
</style>
</head>
<section class="intro" style="height: 90vh">
    <div class="mask d-flex align-items-center  gradient-custom" >
        <div class="container"  >
            <div class="row justify-content-center">
                <div class="col-12 col-lg-9 col-xl-7" >
                    <div class="card">
                        <div class="card-body  ">
                            <h3 class="mb-4 pb-2">Registracija trgovca</h3>

                            <form action="" >

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="text" id="naziv" class="form-control" />
                                            <label class="form-label"  name="naziv" value="" for="naziv">Naziv firme</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="text" id="adresa" class="form-control" />
                                            <label class="form-label" name="adresa" value="" for="adresa">Adresa</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="text" id="grad" class="form-control" />
                                            <label class="form-label" name="grad" value="" for="mail">Grad</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="text" id="država" class="form-control" />
                                            <label class="form-label" name="država" value="" for="država">Država</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="email" id="mail" class="form-control" />
                                            <label class="form-label" name="mail" value="" for="mail">Email</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="tel" id="phoneNumber" class="form-control" />
                                            <label class="form-label" name="Prezime" value="" for="Prezime">Telefon</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="password" id="passwordHash" class="form-control" />
                                            <label class="form-label" name="passwordHash" value="" for="passwordHash">Šifra</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="password" class="form-control" />
                                            <label class="form-label" >Potvrdi šifru</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="form-outline">
                                    <textarea class="form-control" id="poslovnice" rows="2"></textarea>
                                    <label class="form-label" for="poslovnice">Unesite adrese ostalih poslovnica</label>
                                </div>

                                <div>
                                    <label for="form-check" class="form-label">Kategorije:</label> <br>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="interes1" value="option1" />
                                        <label class="form-check-label" for="interes1">Auta</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="interes2" value="option2" />
                                        <label class="form-check-label" for="interes2">Parfemi</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="interes3" value="option1" />
                                        <label class="form-check-label" for="interes3">Nekretnine</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="interes4" value="option2" />
                                        <label class="form-check-label" for="interes4">IT oprema</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="interes5" value="option1" />
                                        <label class="form-check-label" for="interes5">Odjeća</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="interes6" value="option2" />
                                        <label class="form-check-label" for="interes6">Cvijeće</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="interes7" value="option1" />
                                        <label class="form-check-label" for="interes7">Literatura</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="interes8" value="option2" />
                                        <label class="form-check-label" for="interes8">Nakit i satovi</label>
                                    </div>
                                </div>




                                <div class="row">
                                    <div class="col-12">

